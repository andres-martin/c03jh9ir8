<h1>Create a new Actor</h1>

<%= form_for @actor do |f| %>
<h3>Name: <%= f.text_field :name %></h3>  
<h3>Biography: <%= f.text_field :bio %></h3> 
<h3>Birth Date: <%= f.date_field :birth_date %></h3>  
<h3>Birth Place: <%= f.text_field :birth_place %></h3>  
<h3>Image URL: <%= f.url_field :image_url %></h3>
<h3>Is alive?</h3>
    <p><%= f.radio_button :alive, 'true' %> Yes</p>
    <p><%= f.radio_button :alive, 'false' %> No</p>
<%= f.submit %>  
<% end %>